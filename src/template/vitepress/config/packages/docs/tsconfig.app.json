{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "src/**/*.md"],
  "compilerOptions": {
    "tsBuildInfoFile": "../../node_modules/.tmp/tsconfig.docs.app.tsbuildinfo",
    "paths": {
      "@scopedPackageName@": ["../@projectName@/src/index.ts"]
    }
  },
  "vueCompilerOptions": {
    "vitePressExtensions": [".md"],
  }
}
