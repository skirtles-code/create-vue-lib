{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    ".vitepress/theme/**/*",
    ".vitepress/theme/**/*.vue",
    "src/**/*.md"
  ],
  "compilerOptions": {
    "paths": {
      "@scopedPackageName@": ["../@projectName@/src/index.ts"]
    }
  },
  "vueCompilerOptions": {
    "vitePressExtensions": [".md"],
  }
}
