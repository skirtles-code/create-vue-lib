{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    ".vitepress/theme/**/*",
    ".vitepress/theme/**/*.vue",
    "src/**/*.md"
  ],
  "compilerOptions": {
    "paths": {
      <%_ if (config.includeAtAliases) { _%>
      "@/*": ["./src/*"],
      <%_ } _%>
      "<%- config.scopedPackageName %>": ["../<%- config.mainPackageDirName %>/src/index.ts"]
    }
  },
  "vueCompilerOptions": {
    "vitePressExtensions": [".md"],
  }
}
